<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spBoard.spring_board_mybatis.member.mapper.MemberMapper">
    <insert id="insertMember" parameterType="Member" useGeneratedKeys="true" keyProperty="memberId">
        INSERT INTO member_tbl (
            username, password, name, role, status, created_at
        ) VALUES (
            #{username}, #{password}, #{name}, #{role}, #{status}, NOW()
        )
    </insert>

    <select id="findById" resultType="Member">
        SELECT *
        FROM member_tbl
        WHERE member_id = #{memberId}
    </select>

    <select id="findByUsername" resultType="Member">
        SELECT *
        FROM member_tbl
        WHERE username = #{username}
    </select>
</mapper>